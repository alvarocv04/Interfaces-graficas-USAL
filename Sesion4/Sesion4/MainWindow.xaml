<Window x:Class="Sesion4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sesion4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Name="caja1" Margin="10"/>
        <TextBox Name="caja2" Grid.Column="1" Margin="10"/>
        <Button Content="Añadir" Grid.Column="2" Margin="10" Click="Button_Click"/>
        <ListView Name="tabla" Grid.Row="1" Grid.ColumnSpan="3" Margin="10" SelectionChanged="tabla_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="NOMBRE" DisplayMemberBinding="{Binding nombre}" Width="200"/>
                    <GridViewColumn Header="APELLIDO" DisplayMemberBinding="{Binding apellido}" Width="200"/>
                    <GridViewColumn Header="EDAD" DisplayMemberBinding="{Binding edad}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Name="etiq" Grid.Row="2" Grid.ColumnSpan="3" Margin="10" Background="Aquamarine"/>
    </Grid>
</Window>
