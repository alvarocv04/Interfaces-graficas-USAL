<Window x:Class="Practica2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Canvas Name="mipanel">
        <Rectangle Name="rect" Height="50" Width="100" Stroke="Red" Fill="Transparent" StrokeThickness="5" Canvas.Left="50" Canvas.Top="100" RenderTransformOrigin="0.5 0.5" MouseMove="Window_MouseMove">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1" x:Name="miescalado"/>
                    <RotateTransform Angle="30" x:Name="mirotacion"/>
                    <!---CenterX="50" CenterY="25"/>-->
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Canvas>
</Window>
