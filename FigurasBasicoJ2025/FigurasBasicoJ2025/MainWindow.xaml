<Window x:Class="FigurasBasicoJ2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FigurasBasicoJ2025"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Crear Figura" Click="Button_Crear_Click"   Margin="10"/>
        <Button Content="Animar"
            Click="Button_Animar_Click" Grid.Column="1"  Margin="10"/>
        <Button Name="botonborrar" Content="Borrar" Click="Button_Borrar_Click" IsEnabled="False" Grid.Column="2"/>
        <Canvas Name="lienzo" Grid.Row="1"
            Grid.ColumnSpan="3" />
        <ListView Grid.Row="2" Grid.ColumnSpan="3" Name="tabla" Margin="10" SelectionChanged="tabla_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="TIPO" DisplayMemberBinding="{Binding tipo}" Width="200"/>
                    <GridViewColumn Header="x" DisplayMemberBinding="{Binding x}" Width="200"/>
                    <GridViewColumn Header="x" DisplayMemberBinding="{Binding y}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
