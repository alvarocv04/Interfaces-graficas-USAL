<Window x:Class="FigurasBasicoJ2025.Dialogo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FigurasBasicoJ2025"
        mc:Ignorable="d"
        Title="Dialogo" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" Name="tabla" Margin="10" SelectionChanged="tabla_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="TIPO" DisplayMemberBinding="{Binding tipo}" Width="200"/>
                    <GridViewColumn Header="x" DisplayMemberBinding="{Binding x}" Width="200"/>
                    <GridViewColumn Header="x" DisplayMemberBinding="{Binding y}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Grid.Row="1" Margin="50" Name="cerrar" Content="CERRAR" Click="cerrar_Click"/>
    </Grid>
</Window>
